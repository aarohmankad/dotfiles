# Helper aliases
alias ..='cd ..'
alias x='exit'
alias d='rm -rf'
alias diff='icdiff'
alias enhance='sudo apt update && sudo apt upgrade -y'
alias zshrl='source ~/.zshrc'
alias t='touch'
alias sp='j scratchpad && subl .'
alias s.='subl .'

# Overriding Default Commands
alias mkdir='mkdir -pv'
alias top='htop'
alias df='pydf'
alias cp='gcp -r'
alias cat='bat'
alias less='bat'

# PDF reader alias
alias pdf='evince'

# Git aliases
alias gi='git init'
alias gcl='git clone'
alias gs='git status'
alias gd='git diff'
alias ga='git add -A'
alias gc='git commit -am'
alias gph='git push origin HEAD'
alias gpl='git pull'
alias gplm='git pull origin master'
alias gf='git fetch'
alias gcb='git checkout -b'
alias gch='git checkout'
alias gm='git merge'
alias grao='git remote add origin'
alias grm='git rebase master'

# g++ aliases
alias comp='g++ -Werror -Wall'
alias g11='g++ -std=c++11 -Werror -Wall'

# vagrant aliases
alias vup='vagrant up'
alias vssh='vagrant ssh'

# always copy with xclip
alias xc='xclip -selection c'
alias xp='xclip -o'

# Data Science Aliases
alias py='python3'
alias tf='source ~/tensorflow/bin/activate'
alias oct='octave-cli'
alias panda='pandoc'

# Web Development Aliases
alias serve='python -m http.server'
alias cra='npx create-react-app'
alias crna='npx create-react-native-app'
alias cssr='npm init react-app --scripts-version universal-react-scripts'
